type Link {
  id: ID! @id
  createdAt: DateTime! @createdAt
  description: String!
  url: String!
  postedBy: User
  votes: [Vote!]!
}

type User {
  id: ID! @id
  email: String! @unique
  password: String!
  links: [Link!]!
  votes: [Vote!]!
  stats: [Stat!]!
  profiles: [Profile!]!
}

type Vote {
  id: ID! @id
  links: [Link!]!
  user: User!
}

type Stat {
  id: ID! @id
  postedBy: User
  deadlift: Int!
  squat: Int!
  benchpress: Int!
  shoulderpress: Int!
  sumopull: Int!
  frontsquat: Int!  
}

type Profile {
  id: ID! @id
  postedBy: User
  feet: Int!
  inches: Int!
  male: Boolean!
  weight: Int!
}